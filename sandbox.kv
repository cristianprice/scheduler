
<CodePanel@MDBoxLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 5

    CodeInput:
        id: code_input
        size_hint: 1, .9
        font_size: 20
        multiline: True
        background_color: root.theme_cls.backgroundColor
        text: 'print("Hello, World!")'

    MDBoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10
        size_hint: 1, .1

        MDButton:
            on_press: app.run_code(root.ids.code_input.text)

            MDButtonIcon:
                icon: "play"
            MDButtonText:
                text: "Run"
        
        MDButton:
            on_press: app.format_code(*args)

            MDButtonIcon:
                icon: "format-align-right"
            MDButtonText:
                text: "Format"